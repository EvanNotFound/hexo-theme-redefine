$first-screen-font-size = 2rem
$first-screen-icon-size = 1.6rem

@import "../../common/variables"

.first-screen-container {
  font-family "Optima Bold", sans-serif
  position relative
  box-sizing border-box
  width 100%
  min-height 100vh
  overflow hidden
  background var(--first-screen-img) center center / cover no-repeat
  background-size cover
  will-change transform

  .content {
    position relative
    box-sizing border-box
    min-height 90vh

    .description {
      width: 100vw
      font-weight bold
      font-size $first-screen-font-size
      line-height 1.8
      text-align center
      color var(--first-screen-text-color)
      i {
        font-size: $first-screen-font-size * 0.7
      }


      +redefine-tablet() {
        font-size $first-screen-font-size * 0.9
      }
    }


    .social-contacts {
      position absolute
      bottom 60px
      font-size $first-screen-icon-size
      text-align center
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.5)
      padding 4px 24px
      border-radius $redefine-border-radius-medium
      box-shadow: inset 0 0 2000px var(--first-screen-icons-container-background-color);
      border 1.5px solid var(--first-screen-icons-container-border-color);


      +redefine-tablet() {
        font-size $first-screen-icon-size * 0.9
      }

      .social-contact-item {
        margin-right 20px
        cursor pointer
        line-height 2
        color #FFF

        &:last-child {
          margin-right 0
        }

      }

    }
  }
}

